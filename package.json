{
  "name": "dcv-decryptor",
  "private": true,
  "module": "index.ts",
  "type": "module",
  "version": "0.0.5",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "bun run index.ts",
    "build": "bun build ./index.ts --target=bun-windows-x64 --compile --outfile ./build/dcv-decryptor",
    "release": "release-it"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "release-it": "^19.0.5"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "axios": "^1.12.2",
    "boxen": "^8.0.1",
    "commander": "^14.0.1",
    "jwt-decode": "^4.0.0",
    "node-widevine": "workspace:*",
    "ora": "^9.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "发布 v${version} 版本"
    },
    "github": {
      "release": true,
      "assets": [
        "build/dcv-decryptor.exe"
      ]
    },
    "hooks": {
      "after:git:release": "bun run build"
    }
  }
}
